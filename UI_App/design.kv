#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ElementCard@MDCard>:
    radius: '10dp'
    spacing: '10dp'
    padding: '10dp'
    image: ''
    text: ''
    sub_text: ''
    orientation: 'vertical'
    ripple_behavior: True
    on_release:
        app.root.transition = RiseInTransition()
    Image:
        source: root.image
        #halign: 'center'
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:    
            text: root.text
            halign: 'center'
        MDLabel:    
            text: root.sub_text
            halign: 'center'

<CustomizeScreen@MDBoxLayout>:
    orientation: 'vertical'
    text:''
    padding: 100
    MDLabel:
        text: root.text
        halign: 'center'
        pos_hint: {'center_x': 0.5}
    MDFillRoundFlatButton:
        text: 'BACK'    
        pos_hint: {'center_x': 0.5}
        on_release:
            app.root.current = 'main_menu'
            app.root.transition = SlideTransition(direction='left')    

                   
<ui>:
    MDScreen:
        name: 'login'
        title: 'login'
        size_hint: 1, 1
        pos_hint: {"center_x": .9, "center_y": 1}
        orientation:'vertical'
        MDIcon:
            icon: 'account'
            icon_color: 0, 0, 0, 0
            halign: 'center'
            font_size: 180
            pos_hint: {"center_x":0.1, "center_y": 0.30}
            spacing: 35
        MDTextField:
            mode: "round"
            id: user
            icon_left: "account-check"
            hint_text: "Username"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": 0.10}
        MDTextField:
            mode: "round"
            id: password
            icon_left: "key-variant"
            hint_text: "Password"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": 0}    
            password: True        
        MDTextField:
            mode: "round"
            id: code
            icon_left: "account-check"
            hint_text: "Access Code"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": -0.1}
        MDFillRoundFlatButton:
            text: "LOG IN"
            font_size: 15
            pos_hint: {"center_x": 0.1, "center_y": -0.2}
            #on_press: app.login()   
            on_release:
                root.current = 'main_menu'       

    MDScreen:  
        name: 'main_menu'       
        md_bg_color: 0, .5, .5, 1
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout: 
                size_hint: 1, 0.2    
                orientation: 'horizontal'
                padding: '10dp'
                MDCard:
                    radius: '10dp'
                    padding: '20dp'
                    line_color: 1,0,1,1
                    MDLabel:
                        text: 'Bienvenido <USER>'
                        halign: 'center'
                        pos_hint: {"center_y": 0.5}

            MDGridLayout:
                cols: 3
                size_hint: 1, 0.8    
                padding: ['10dp', '10dp', '10dp', '10dp']    
                spacing: '10dp'

                ElementCard:
                    text: 'TRANSFER'
                    sub_text: 'Transferencia Bancaria'
                    image: 'Images/transfer.jpg'
                    on_release:
                        root.current = 'transfer_screen'

                ElementCard:
                    text: 'REPORTES'
                    sub_text: 'Generar Reporte'
                    image: 'Images/bank_report.jpg'
                    on_release:
                        root.current = 'report_screen'

                ElementCard:
                    text: 'SERVICIOS'
                    sub_text: 'Pagar Servicios'
                    image: 'Images/service_paid.png'
                    on_release:
                        root.current = 'service_screen'                

    MDScreen:
        name: 'transfer_screen'
        CustomizeScreen:
            text: 'TRASNFERS'

    MDScreen:
        name: 'report_screen'
        CustomizeScreen:
            text: 'REPORT'

    MDScreen:
        name: 'service_screen'
        CustomizeScreen:
            text: 'SERVICES'        