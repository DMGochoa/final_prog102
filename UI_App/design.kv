#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ElementCard@MDCard>:
    radius: '10dp'
    spacing: '10dp'
    padding: '10dp'
    image: ''
    text: ''
    sub_text: ''
    orientation: 'vertical'
    ripple_behavior: True
    on_release:
        app.root.transition = RiseInTransition()
    Image:
        source: root.image
        #halign: 'center'
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:    
            text: root.text
            halign: 'center'
        MDLabel:    
            text: root.sub_text
            halign: 'center'

<CustomizeScreen@MDBoxLayout>:
    orientation: 'vertical' ##
    text:''
    padding: 100
    #size_hint: 1, 0.2 # !!
    MDLabel:
        text: root.text
        halign: 'center'
        pos_hint: {'center_x': 0.5}
    MDFillRoundFlatButton:
        text: 'BACK'    
        pos_hint: {'center_x': 0.5}
        on_release:
            app.root.current = 'main_menu'
            app.root.transition = SlideTransition(direction='left')    

                   
<ui>:
    MDScreen:
        name: 'login'
        title: 'login'
        size_hint: 1, 1
        pos_hint: {"center_x": .9, "center_y": 1}
        orientation:'vertical'
        MDIcon:
            icon: 'account'
            icon_color: 0, 0, 0, 0
            halign: 'center'
            font_size: 180
            pos_hint: {"center_x":0.1, "center_y": 0.30}
            spacing: 35
        MDTextField:
            mode: "round"
            id: user
            icon_left: "account-check"
            hint_text: "Username"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": 0.10}
        MDTextField:
            mode: "round"
            id: password
            icon_left: "key-variant"
            hint_text: "Password"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": 0}    
            password: True        
        MDTextField:
            mode: "round"
            id: code
            icon_left: "key-variant"
            hint_text: "Access Code"
            foreground_color: 1, 0, 1, 1    
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.1, "center_y": -0.1}
            password: True
        MDFillRoundFlatButton:
            text: "LOG IN"
            font_size: 15
            pos_hint: {"center_x": 0.1, "center_y": -0.2}
            on_press: app.login()       

    MDScreen:  
        name: 'main_menu'       
        md_bg_color: 0, .5, .5, 1
        MDBoxLayout:
            orientation: 'vertical'
            MDGridLayout:
                cols: 2 
                size_hint: 1, 0.2    
                # orientation: 'horizontal'
                padding: ['10dp', '10dp', '10dp', '10dp']    
                spacing: '10dp'
                MDCard:
                    radius: '10dp'
                    padding: '20dp'
                    spacing: '10dp'
                    MDLabel:
                        id: user_data_lbl
                        text: ''
                        halign: 'center'
                        pos_hint: {"center_y": 0.5}
                    MDLabel:
                        id: acc_data_lbl
                        text: ''
                        halign: 'center'
                        pos_hint: {"center_y": 0.5}    
                MDCard:
                    radius: '10dp'
                    padding: '20dp'
                    spacing: '10dp'
                    MDLabel:
                        id: more_acc_lbl
                        text: ''
                        font_size: 15
                        halign: 'center'
                        pos_hint: {"center_y": 0.5}
                    
            MDGridLayout:
                cols: 3
                size_hint: 1, 0.7    
                padding: ['10dp', '10dp', '10dp', '10dp']    
                spacing: '10dp'

                ElementCard:
                    text: 'TRANSFER'
                    sub_text: 'Transferencia Bancaria'
                    image: 'Images/transfer.jpg'
                    on_release:
                        root.current = 'transfer_screen'
                                      

                ElementCard:
                    text: 'REPORTS'
                    sub_text: 'Reportes'
                    image: 'Images/bank_report.jpg'
                    on_release:
                        root.current = 'report_screen'

                ElementCard:
                    text: 'SERVICES'
                    sub_text: 'Servicios'
                    image: 'Images/service_paid.png'
                    on_release:
                        root.current = 'service_screen'

            MDBoxLayout: 
                size_hint: 1, 0.2    
                orientation: 'horizontal'
                padding: '10dp'
                MDFillRoundFlatButton:
                    text: "LOG OUT"
                    font_size: 15
                    foreground_color: 1, 0, 1, 1
                    pos_hint: {"center_y": .5}
                    on_press : app.clear_fields()
                    on_release:
                        #app.root.transition = SlideTransition(direction='right') 
                        #app.root.transition = RiseInTransition()
                        root.current = 'login'      
                        # Investigar transitions
                                                          
    MDScreen:
        name: 'transfer_screen'
        MDBoxLayout:   
            orientation: 'vertical'
            pos_hint: {"center_x": 0.7, "center_y":0.7} #
            spacing: '10dp'
            MDBoxLayout:
                size_hint: 1, 0.8    
                orientation: 'vertical'
                spacing: '10dp'
                pos_hint: {"center_x": 0.7, "center_y":0.5} #
                MDTextField:
                    mode: "round"
                    id: cbu
                    #icon_left: "account-check"
                    hint_text: "Origin CBU"
                    width: 220
                    font_size: 20
                    size_hint_x: None
                MDTextField:
                    mode: "round"
                    id: cbu
                    #icon_left: "account-check"
                    hint_text: "Destination CBU"
                    width: 220
                    font_size: 20
                    size_hint_x: None
                    
                MDTextField:
                    mode: "round"
                    id: amount
                    #icon_left: "key-variant"
                    hint_text: "Amount"
                    width: 220
                    font_size: 20
                    size_hint_x: None
                
                
                MDFillRoundFlatButton:
                    text: "SEND TRANSACTION"
                    font_size: 15
                    halign: 'center'
                    #on_press: app.login() 
            MDBoxLayout:
                orientation: 'vertical' ##
                pos_hint: {"center_x": 0.5, "center_y":0.5}
                size_hint: 1, 0.2 
                MDLabel:
                    text: 'TO MAIN MENU'
                    halign: 'center'
                    pos_hint: {'center_x': 0.3}
                MDFillRoundFlatButton:
                    text: 'BACK'    
                    pos_hint: {'center_x': 0.3}
                    on_release:
                        app.root.current = 'main_menu'
                        app.root.transition = SlideTransition(direction='left')

    MDScreen:
        name: 'report_screen'
        CustomizeScreen:
            text: 'REPORT'

    MDScreen:
        name: 'service_screen'
        CustomizeScreen:
            text: 'SERVICES'        